{
  "name": "backend-template",
  "version": "0.0.1",
  "description": "nestia with prisma backend template",
  "author": "gun",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "ts-patch install && typia patch",
    "vault:init": "npx dotenv-vault@latest new vlt_your_own_vault_url",
    "vault:pull": "npx dotenv-vault@latest pull",
    "prisma:init": "npx prisma init",
    "prisma:sync": "npx prisma db pull&& npx prisma generate",
    "sdk:json": "cp package.publish.json packages/api/package.json && cp rollup.config.js packages/api/rollup.config.js",
    "sdk:build": "nestia all && npx tsc -p packages/api/tsconfig.json && npm run sdk:json && npx rollup -c packages/api/rollup.config.js",
    "sdk:publish": " cd packages/api && npm publish --registry https://gun-dev.kro.kr/verdaccio/"
  },
  "dependencies": {
    "@nestia/core": "^4.6.1",
    "@nestia/e2e": "^0.8.0",
    "@nestia/fetcher": "^4.6.1",
    "@nestia/sdk": "^4.6.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.0.3",
    "@prisma/client": "^6.4.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "prisma": "^6.4.1",
    "reflect-metadata": "^0.2.2",
    "rollup": "^4.34.8",
    "rxjs": "^7.8.1",
    "typescript-transform-paths": "^3.5.3",
    "typia": "^7.6.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestia/benchmark": "^0.3.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "nestia": "^6.4.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.3.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}